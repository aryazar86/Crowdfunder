<h1>Project:</h1> <h2><%= @project.name %></h2>


<% if current_user && @project.validate_owner(current_user) %>
<p><small><%= link_to "Edit this project", edit_project_path %></small></p>
  <% if @sum != 0 %>
  <p><%= link_to "Delete this project", @project, :confirm => "Are you sure you want to delete this project?", :method => :delete %></p>
  <% end %>

<% end %>


Description: <%= @project.description %><br/>
<%= @project.funded %> <br/>
Deadline: <%= @project.deadline %>

<p><%= link_to image_tag(@owner.avatar, :class => "bio_pic"), user_path(@project.user_id) %></p>


<p><%= link_to "View the creator's profile", user_path(@project.user_id) %></p>

<p><%= @project.time_left%></p>
<% unless @project.time_left == "This project is now closed." %>
<div style="width:80%">
  <div style="float:left"><h1>Current contributions!</h1>
    <ul>
    <% @project.contributions.each do |c| %>
      <% if c.amount %>
       <li> <%= c.user.username %> contributed $<%= c.amount %></li>
      <% end %>
    <% end %>
    </ul>

    <% if current_user %>
      <%= form_for [@project, @contribution] do |f| %>
       <div>
        <p><%=f.label "Make a contribution!" %></p>
        <p><%=f.text_field :amount  %></p>

       <p> <%= f.submit "Contribute!" %></p>
      </div>
      <%end%>
    <% else %>
      Please <%= link_to "log in", new_user_session_path %> or <%= link_to "sign up", new_user_path %> to contribute!
    <% end %>
  </div>

  <div style="float:right"><h1>Comments:</h1>
    <ul>
      <%= render @project.comments %>
    </ul>
    <% if current_user %>
      <%= render partial: "comments/form", locals: {commentable: @project, comment: @comment} %>
    <% else %>
        Please <%= link_to "log in", new_user_session_path %> or <%= link_to "sign up", new_user_path %> to contribute!
    <% end %>
   </div>
 </div>
 <% end %>

