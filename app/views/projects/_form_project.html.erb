<%= form_for @project do |f| %>
  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>

  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>

  <p>
    <%= f.label :goal %><br />
    <%= f.text_field :goal %>
  </p>

  <p>
    <%= f.label :start_time %><br />
    <%= f.datetime_select :start_time %>
  </p>

  <p>
    <%= f.label :deadline %><br />
    <%= f.datetime_select :deadline %>
  </p>

  <%= f.submit "Save" %>

<% end %>
