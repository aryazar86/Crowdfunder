<!DOCTYPE html>
<html>
<head>
  <title>Crowdfunder</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <p style="float:right;">
      <% if current_user %>
        Signed in as <%= link_to current_user.username, user_path(current_user.id) %>. <%= link_to "Log out", user_session_path("current"), :method => :delete %>
      <% else %>
        <%= link_to "Log in", new_user_session_path %> or <%= link_to "Sign up", new_user_path %>
      <% end %>
    </p>

      <% if flash[:notice] %>
        <div id="notice" data-notice class="alert-box info radius"><%= flash[:notice] %></div>
      <% end %>
      <% if flash[:alert] %>
        <div id="alert" data-alert class="alert-box warning radius"><%= flash[:alert] %></div>
      <% end %>
      
<%= yield %>

</body>
</html>
